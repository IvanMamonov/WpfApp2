<Page x:Class="WpfApp2.zakazpc"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="zakazpc">

    <Grid Margin="0,0,-225,-83">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Выберите стол" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="40" Foreground="White" FontWeight="Bold" Grid.Column="0"/>
        <ComboBox Grid.Column="1" Grid.Row="1" x:Name="id_tables" ItemsSource="{Binding types}" SelectionChanged="id_tables_SelectionChanged" Grid.RowSpan="1" Width="360" Height="60">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding id_tables}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
    </Grid>
</Page>
